<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="64dp"
    android:orientation="horizontal" android:padding="10dp"
    android:background="@color/green_500" android:gravity="center_vertical"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/imgIcon" android:layout_width="36dp" android:layout_height="36dp"
        android:tint="@color/white" android:src="@drawable/ic_cat_fun"/>

    <TextView
        android:id="@+id/tvTitle" android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1" android:paddingStart="12dp"
        android:textColor="@color/white" android:textSize="16sp" android:textStyle="bold"/>

    <ImageView
        android:layout_width="24dp" android:layout_height="24dp"
        android:tint="@color/white"
        android:src="@android:drawable/ic_menu_more"/>
</LinearLayout>
